<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_variacao_da_energia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paulo.easyfisica.topicos.termologia.termodinamica.VariacaoDaEnergia">

    <TextView
        android:text="Variaçao da energia interna"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/txt_variacaodaenergiainterna" />

    <TextView
        android:text="ΔU = n * R * Δt"
        android:textSize="25dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_variacaodaenergiainterna"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/textView2" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edt_constanteuniversal"
        android:hint="R = const. universal dos gases perfeitos"
        android:fontFamily="casual"
        android:layout_width="350dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_voltar"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/edt_variacaodatemperatura"
        android:layout_alignEnd="@+id/edt_variacaodatemperatura" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:id="@+id/txt_resultvarenerinterna"
        android:layout_alignBaseline="@+id/txt_variacao"
        android:layout_alignBottom="@+id/txt_variacao"
        android:layout_alignRight="@+id/txt_variacaodaenergiainterna"
        android:layout_alignEnd="@+id/txt_variacaodaenergiainterna" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edt_numdemols"
        android:hint="n = Nº de mols do gás"
        android:fontFamily="casual"
        android:layout_above="@+id/edt_constanteuniversal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/edt_variacaodatemperatura"
        android:hint="Δt = variação da temperatura absoluta"
        android:fontFamily="casual"
        android:layout_below="@+id/edt_constanteuniversal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/btn_calcular"
        android:layout_below="@+id/edt_variacaodatemperatura"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Var. da energia interna (ΔU) ="
        android:textSize="15dp"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_variacao"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/btn_voltar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
