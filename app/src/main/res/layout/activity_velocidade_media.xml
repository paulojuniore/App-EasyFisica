<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_velocidade_media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paulo.easyfisica.topicos.mecanica.cinematica.VelocidadeMedia">

    <TextView
        android:text="Velocidade Média"
        android:textSize="30dp"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/txt_velmedia" />

    <TextView
        android:text="v = Δd / Δt"
        android:textSize="25dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/txt_formulavelmedia"
        android:layout_below="@+id/txt_velmedia"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/edt_intervalodetempo"
        android:layout_below="@+id/edt_dpercorrida"
        android:layout_alignLeft="@+id/edt_dpercorrida"
        android:layout_alignStart="@+id/edt_dpercorrida"
        android:hint="Δt = Intervalo de tempo"
        android:fontFamily="casual"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="32dp"
        android:id="@+id/edt_dpercorrida"
        android:hint="Δd = Distância percorrida"
        android:fontFamily="casual"
        android:layout_below="@+id/txt_formulavelmedia"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_calcular"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/edt_intervalodetempo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Velocidade Média(v) ="
        android:textSize="17dp"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/txt_resultadovelmedia"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_below="@+id/btn_calcular"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_resultvelmedia"
        android:layout_alignBaseline="@+id/txt_resultadovelmedia"
        android:layout_alignBottom="@+id/txt_resultadovelmedia"
        android:layout_toLeftOf="@+id/btn_voltar"
        android:layout_toStartOf="@+id/btn_voltar" />

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_voltar"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
