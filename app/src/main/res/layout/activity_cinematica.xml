<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cinematica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paulo.easyfisica.topicos.mecanica.cinematica.Cinematica">

    <TextView
        android:text="Cinemática"
        android:textSize="30dp"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/txt_cinematica" />

    <Button
        android:text="Aceleração Média"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_velmedia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/btn_acelmedia" />

    <Button
        android:text="Velocidade Média"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/btn_velmedia"
        android:layout_below="@+id/txt_cinematica"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_voltar"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_acelmedia"
        android:layout_toEndOf="@+id/btn_acelmedia" />
</RelativeLayout>
