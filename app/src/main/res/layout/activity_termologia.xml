<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_termologia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paulo.easyfisica.topicos.termologia.Termologia">

    <TextView
        android:text="Termologia"
        android:textColor="#000000"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/txt_termologia" />

    <Button
        android:text="Termodinâmica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_calorimetria"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/btn_termodinamica" />

    <Button
        android:text="Dilatação"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_termodinamica"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/btn_dilatacao" />

    <Button
        android:text="Calorimetria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"
        android:id="@+id/btn_calorimetria"
        android:layout_below="@+id/txt_termologia"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/txt_termologia"
        android:layout_toEndOf="@+id/txt_termologia"
        android:layout_marginBottom="11dp"
        android:id="@+id/btn_voltar" />
</RelativeLayout>
