<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_topico"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paulo.easyfisica.topicos.Topico">

    <TextView
        android:text="Tópicos"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/txt_topicos"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Termologia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/btn_termologia"
        android:layout_below="@+id/btn_mecanica"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Óptica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/btn_optica"
        android:layout_below="@+id/btn_termologia"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Ondulatória"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/btn_ondulatoria"
        android:layout_below="@+id/btn_optica"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Eletromagnestismo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/btn_eletromagnetismo"
        android:layout_below="@+id/btn_ondulatoria"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/btn_voltar" />

    <Button
        android:text="Mecânica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/btn_mecanica"
        android:layout_below="@+id/txt_topicos"
        android:layout_alignLeft="@+id/txt_topicos"
        android:layout_alignStart="@+id/txt_topicos" />
</RelativeLayout>
