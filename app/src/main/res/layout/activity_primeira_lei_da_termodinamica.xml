<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_primeira_lei_da_termodinamica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.paulo.easyfisica.topicos.termologia.termodinamica.PrimeiraLeiDaTermodinamica">

    <TextView
        android:text="1º lei da termodinâmica"
        android:textSize="30dp"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/txt_leitermodinamica" />

    <TextView
        android:text="Q = ʈ + ΔU"
        android:textSize="25dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_leitermodinamica"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/txt_formula" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/edt_trabalho"
        android:layout_alignRight="@+id/edt_trabalho"
        android:layout_alignEnd="@+id/edt_trabalho"
        android:layout_marginTop="12dp"
        android:id="@+id/edt_vardeenerinterna"
        android:fontFamily="casual"
        android:hint="ΔU = variação de energia interna" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:id="@+id/edt_trabalho"
        android:fontFamily="casual"
        android:hint="t = trabalho"
        android:layout_below="@+id/txt_formula"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_vardeenerinterna"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/btn_calcular" />

    <TextView
        android:text="Quantidade de calor (Q) ="
        android:textSize="16dp"
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_calcular"
        android:layout_alignLeft="@+id/txt_leitermodinamica"
        android:layout_alignStart="@+id/txt_leitermodinamica"
        android:layout_marginTop="49dp"
        android:id="@+id/txt_qtdecalor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_qtdecalor"
        android:layout_alignRight="@+id/edt_vardeenerinterna"
        android:layout_alignEnd="@+id/edt_vardeenerinterna"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:id="@+id/txt_resultprimeiralei"
        android:layout_alignLeft="@+id/btn_voltar"
        android:layout_alignStart="@+id/btn_voltar" />

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_voltar" />
</RelativeLayout>
